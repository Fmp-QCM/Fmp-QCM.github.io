{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "strict": true,
        "noEmit": true,
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "types": ["node"],
        "baseUrl": "./",
        "outDir": "./out",
        "paths": {
            "*": ["src/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}